<!DOCTYPE html>
<html>
  <head>
    <title>Knitr</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <div>
      <% if logged_in? %>
        <%#= link_to "My Patterns", user_path(@user) %>&nbsp;|&nbsp; 
        <%= link_to "Create Pattern", new_pattern_path %> &nbsp;|&nbsp;
        <%= link_to "View All Patterns", patterns_path %> &nbsp;|&nbsp;
        <%= link_to "Log Out", logout_path, method: "delete" %>
      <% else %>
        <%= link_to "Join knitr", signup_path %> &nbsp;|&nbsp;
        <%= link_to "Log In", login_path %>
      <% end %>

    </div>
    <%= yield %>
  </body>
</html>
