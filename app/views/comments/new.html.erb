<% if @pattern %>
    <h1>Create a Comment for <%= @pattern.pattern_name %>:</h1>
<% else %>
    <h1>Create a Comment:</h1>
<% end %>
<hr>
<%= form_for([@pattern, @comment]) do |f| %>

    <% if !@pattern %> 
        <%= f.label :pattern_name %>:
        <%= f.collection_select :pattern_id, Pattern.all, :id, :pattern_name %><br><br>
    <% end %>

    <%= f.label :rating %>:&nbsp;
    <%= f.number_field :rating, :in => 1..5, :step => 1 %><br><br>

    <%= f.label :content %>:<br>
    <%= f.text_area :content %><br><br>

    <%= f.submit "Submit Comment" %>
<% end %>